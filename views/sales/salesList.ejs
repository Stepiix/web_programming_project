<!DOCTYPE html>
<html>
  <head>
    <title>Sale List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header>
      <nav class="navbar">
        <a href="/" class="nav-branding">PortugueseRoots</a>
        <a href="/users" class="button">See all Users</a>
        <a href="/users/create" class="button secondary">Create user</a>
        <ul class="nav-menu">
          <li class="nav-item">
            <a href="/admins/create" class="nav-link">Create admin</a>
          </li>
          <li class="nav-item">
            <a href="/admins" class="nav-link">See all Admins</a>
          </li>
          <li class="nav-item">
            <a href="/users" class="nav-link">See all the users</a>
          </li>
          <li class="nav-item">
            <a href="/items" class="nav-link">See all the events</a>
          </li>
          <li class="nav-item">
            <a href="/places" class="nav-link">See all the places</a>
          </li>
          <li class="nav-item">
            <a href="/places" class="nav-link">See all the places</a>
          </li>
          <li class="nav-item">
            <a href="/sales" class="nav-link">See all the sales</a>
          </li>
        </ul>
        <div class="hamburger">
          <span class="bar"></span>
          <span class="bar"></span>
          <span class="bar"></span>
        </div>
      </nav>
    </header>
    <section>
      <div class="container">
        <h1>Sale List</h1>
        <% if(sales.length>0) { %>
          <table class="list-table">
            <thead>
              <tr>
                <th>#</th>
                <th>ID</th>
                <th>Ticket ID</th>
                <th>Customer Mail</th>
                <th>Event Name</th>
                <th>Show</th>
                <th>Edit</th>
                <th>Eliminate</th>
              </tr>
            </thead>
            <tbody>
  
              <% for(var i=0; i<sales.length; i++) { %>
                <tr>
                  <td> <%= i+1%> </td>
                  <td> <%= sales[i]._id%></td>
                  <td> <%= sales[i].ticket_id%></td>
                  <td>
                    <% for(var j=0; j<users.length; j++) { %>
                      <% if(users[j]._id==sales[i].customer_id) { %>
                        <a href="/users/show/<%= users[j]._id%> "><%= users[j].email%></a>
                    <% } else {} }%>
                  </td>
                  <td>
                    <% for(var j=0; j<users.length; j++) { %>
                      <% if(events[j]._id==sales[i].event_id) { %>
                        <a href="/items/show/<%= events[j]._id%> "><%= events[j].name%></a>
                    <% } else {} }%>
                  </td>
                  <td><a href="/sales/delete/<%= sales[i]._id%> "> Eliminate </a></td>
                </tr>
              <% } %>
            </tbody>
          </table>
        <% } else { %>
          <div>No sales found</div>
        <% } %>
      </div>
      <!-- <h3><a href="/sales/create">Create new sale</a></h3> -->
    </section>
  </body>
  <script src="/js/navbar.js"></script>
</html>