<!DOCTYPE html>
<html>
  <head>
    <title>Users List</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header>
      <nav class="navbar">
        <a href="/" class="nav-branding">PortugueseRoots</a>
        <a href="/users" class="button">See all Users</a>
        <a href="/users/create" class="button secondary">Create user</a>
        <ul class="nav-menu">
          <li class="nav-item">
            <a href="/admins/create" class="nav-link">Create admin</a>
          </li>
          <li class="nav-item">
            <a href="/admins" class="nav-link">See all Admins</a>
          </li>
          <li class="nav-item">
            <a href="/users" class="nav-link">See all the users</a>
          </li>
          <li class="nav-item">
            <a href="/items" class="nav-link">See all the events</a>
          </li>
          <li class="nav-item">
            <a href="/places" class="nav-link">See all the places</a>
          </li>
          <li class="nav-item">
            <a href="/places" class="nav-link">See all the places</a>
          </li>
          <li class="nav-item">
            <a href="/sales" class="nav-link">See all the sales</a>
          </li>
        </ul>
        <div class="hamburger">
          <span class="bar"></span>
          <span class="bar"></span>
          <span class="bar"></span>
        </div>
      </nav>
    </header>
    <section>
      <div class="container">
        <h1>Users List</h1>
        <% if(users.length>0) { %>
          <table class="list-table">
            <thead>
              <tr>
                <th>#</th>
                <th>Id</th>
                <th>Name</th>
                <th>Phone number</th>
                <th>Email</th>
                <th>Show</th>
                <th>Edit</th>
                <th>Eliminate</th>
              </tr>
            </thead>
            <tbody>
  
              <% for(var i=0; i<users.length;i++) { %>
                <tr>
                  <td> <%= i+1%> </td>
                  <td> <%= users[i]._id%></a></td>
                  <td> <%= users[i].name%></a></td>
                  <td> <%= users[i].phonenumber%></a></td>
                  <td> <%= users[i].email%></a></td>
                  <td><a href="/users/show/<%= users[i]._id%> "> Show </td>
                  <td><a href="/users/edit/<%= users[i]._id%> "> Edit </a></td>
                  <td><a href="/users/delete/<%= users[i]._id%> "> Eliminate </a></td>
                </tr>
              <% } %>
            </tbody>
          </table>
        <% } else { %>
          <div>No users found</div>
        <% } %>
      </div>
      <h3 class="links"><a href="/users/create">Create new User</a></h3>
      <h3 class="links"><a href="/admin/create">Create new Admin</a></h3>
    </section>
  </body>
  <script src="/js/navbar.js"></script>
</html>