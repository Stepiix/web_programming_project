<!DOCTYPE html>
<html>
  <head>
    <title>User Detail</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header>
      <nav class="navbar">
        <a href="/" class="nav-branding">PortugueseRoots</a>
        <a href="/users" class="button">See all Users</a>
        <a href="/users/create" class="button secondary">Create user</a>
        <ul class="nav-menu">
          <li class="nav-item">
            <a href="/admins/create" class="nav-link">Create admin</a>
          </li>
          <li class="nav-item">
            <a href="/admins" class="nav-link">See all Admins</a>
          </li>
          <li class="nav-item">
            <a href="/items" class="nav-link">See all the events</a>
          </li>
          <li class="nav-item">
            <a href="/places" class="nav-link">See all the places</a>
          </li>
          <li class="nav-item">
            <a href="/sales" class="nav-link">See all the sales</a>
          </li>
        </ul>
        <div class="hamburger">
          <span class="bar"></span>
          <span class="bar"></span>
          <span class="bar"></span>
        </div>
      </nav>
    </header>
    <section>
      <div class="container">
        <h1>User Detail</h1>
        <table>
          <tbody>
            <tr>
              <td>Id</td>
              <td>:</td>
              <td><%= user._id %></td>
            </tr>
            <tr>
              <td>Name</td>
              <td>:</td>
              <td><%= user.name %></td>
            </tr>
            <tr>
              <td>Phone number</td>
              <td>:</td>
              <td><%= user.phonenumber %></td>
            </tr>
            <tr>
              <td>Email</td>
              <td>:</td>
              <td><%= user.email %></td>
            </tr>
            <tr>
              <td>Role</td>
              <td>:</td>
              <td><%= user.role %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <h3 class="links"><a href="/users">Watch all users</a></h3>
    </section>
  </body>
  <script src="/js/navbar.js"></script>
</html>
