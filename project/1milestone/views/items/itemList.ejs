<!DOCTYPE html>
<html>
  <head>
    <title>Event List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header>
      <nav class="navbar">
        <a href="/" class="nav-branding">PortugueseRoots</a>
        <a href="/users" class="button">See all Users</a>
        <a href="/users/create" class="button secondary">Create user</a>
        <ul class="nav-menu">
          <li class="nav-item">
            <a href="/admins/create" class="nav-link">Create admin</a>
          </li>
          <li class="nav-item">
            <a href="/admins" class="nav-link">See all Admins</a>
          </li>
          <li class="nav-item">
            <a href="/items" class="nav-link">See all the events</a>
          </li>
          <li class="nav-item">
            <a href="/places" class="nav-link">See all the places</a>
          </li>
          <li class="nav-item">
            <a href="/sales" class="nav-link">See all the sales</a>
          </li>
        </ul>
        <div class="hamburger">
          <span class="bar"></span>
          <span class="bar"></span>
          <span class="bar"></span>
        </div>
      </nav>
    </header>
    <section>
      <div class="container">
        <h1>Event List</h1>
        <% if(items.length>0) { %>
          <table class="list-table">
            <thead>
              <tr>
                <th>#</th>
                <th>Id</th>
                <th>Event Name</th>
                <th>Details</th>
                <th>Date</th>
                <th>Place</th>
                <th>Capacity</th>
                <th>Show</th>
                <th>Edit</th>
                <th>Eliminate</th>
              </tr>
            </thead>
            <tbody>
              <% for(var i=0; i<items.length;i++) { %>
                <tr>
                  <td> <%= i+1%> </td>
                  <td> <%= items[i]._id%></a></td>
                  <td> <%= items[i].name%></a></td>
                  <td> <%= items[i].details%></a></td>
                  <td> <%= items[i].date%></a></td>
                  <td>
                    <% for(var j=0; j<places.length; j++) { %>
                      <% if(places[j]._id==items[i].place_id) { %>
                        <%= places[j].name%>
                    <% } else {} }%>
                  </td>
                  <td> <%= items[i].capacity%></a></td>
                  <td><a href="/items/show/<%= items[i]._id%> "> Show </td>
                  <td><a href="/items/edit/<%= items[i]._id%> "> Edit </a></td>
                  <td><a href="/items/delete/<%= items[i]._id%> "> Eliminate </a></td>
                </tr>
              <% } %>
            </tbody>
          </table>
        <% } else { %>
          <div>No events found</div>
        <% } %>
      </div>
      <h3 class="links"><a href="/items/create">Create new event</a></h3>
    </section>
  </body>
  <script src="/js/navbar.js"></script>
</html>